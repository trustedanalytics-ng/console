spinner(ng-show='state.isPending()')
div(ng-if='state.isLoaded()')
   h3
      | {{ job.appName }} - workflow job

   .content.jobsbrowser
      div(ng-show="toKilled(job.status)")
         h4 Actions
            div.actions
               button.btn.btn-primary(ng-click='onStatusChange("kill")') Kill
               a(ng-href='{{ getHref() }}' ng-show="activeUrl", target="_blank")
                  button.btn.btn-primary Open in Hue file browser
      .panel-group
         .panel.panel-default
            .panel-heading Details
            .panel-body
               table.table.jobdetails
                  tbody
                     tr
                        td Status
                        td
                           d-status(status="job.status")
                     tr
                        td Job id
                        td {{ job.id }}
                     tr
                        td Last modified time
                        td {{ job.lastModTime }}
                     tr
                        td Created time
                        td {{ job.createdTime }}
                     tr
                        td Start time
                        td {{ job.startTime }}
                     tr
                        td End time
                        td {{ job.endTime }}
                     tr
                        td Workflow application path
                        td {{ job.appPath }}
                     tr
                        td Target directory
                        td
                           li(ng-repeat="dir in job.targetDirs") {{ dir }}
                     tr
                        td Coordinator job id
                        td
                           a(ui-sref='app.jobsscheduler.coordinatorjob({ coordinatorjobId: job.coordinatorId })') {{ job.coordinatorId }}


      uib-accordion(close-others="false")
         uib-accordion-group(heading="See logs" is-open="false")
            .logs
               pre
                  p {{ logs }}



