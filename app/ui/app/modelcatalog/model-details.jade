.model-details
    h3
       text-editable(text='model.name' submit='updateModelName(currentText)')
    spinner(ng-show='state.isPending()')
    .panel(ng-show='state.isLoaded()')


        h4.actions-heading Actions
        span.not-supported(ng-if="model.creationTool === 'Other'")
         | *This model is not a supported model type, some actions may not be available.

        .actions
            //button.btn.btn-primary.fa-pencil-square-o(ng-click="goToEditMode()") Edit Metadata
            button.btn.btn-primary.fa-times(ng-click='tryDeleteModel()') Delete
            a(ng-href='/rest/models/{{model.id}}/artifacts/{{mainArtifact.id}}/file')
               button.btn.btn-primary.fa-download(ng-click='downloadModelArtifactFile(mainArtifact)'
               ng-if="mainArtifact") Download

        h4 Metadata
        table.table-metadata
            tr
                td Type
                td {{model.creationTool}}
            tr
                td Version
                td {{model.revision}}
            tr
                td Method
                td {{model.algorithm}}
            tr
                td Description
                td {{model.description}}
            tr
                td Added Date
                td {{model.addedOn}}
            tr
                td Creator
                td {{model.addedBy}}

        .artifacts
           h4(ng-if='extraArtifacts.length') Additional Artifacts
           div(ng-if='!extraArtifacts.length') No Additional Artifacts

           spinner(ng-show='deleteArtifactState.isPending()')
           table.table.table-striped(ng-table="tableParams"
               ng-show='extraArtifacts.length && deleteArtifactState.isDefault()')
              tr(ng-repeat="artifact in $data")
                 td(data-title="'Artifact Name'" sortable="'filename'")
                    | {{ artifact.filename }}
                 td(data-title="'File Path'" sortable="'location'")
                    | {{ artifact.location }}
                 td(data-title="'Actions'").pull-right 
                    .action-icon
                       span.fa.fa-trash-o(ng-click='tryDeleteArtifact(artifact)')
                    .action-icon
                       a(ng-href='/rest/models/{{model.id}}/artifacts/{{artifact.id}}/file')
                        span.fa.fa-download

    .panel.panel-warning(ng-show='state.isError()')
        .panel-heading Error loading content
        .panel-body Model details page is unavailable

script(type="text/ng-template", id="confirm-delete")
    .ngdialog-message.clearfix
        | {{ model.name }}
        p
            | Are you sure you want to delete
            = ' '
            b {{ data.model || data.artifact }}
            | ?
        .pull-right
            button.btn.btn-primary(type='button', ng-click='confirm()') Delete
            button.btn.btn-default(type='button', ng-click="cancel()") Cancel
